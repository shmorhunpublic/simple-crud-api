{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "module": "ESNext",
  "target": "ES6",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
